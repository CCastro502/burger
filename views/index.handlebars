<h1>Burgers!</h1>

<h2>Burgers to Eat</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        <p>{{this.burger_name}} <button type="submit">Eat Me</button></p>
    </li>
    {{/unless}}
    {{/each}}
</ul>
<h2>Eaten Burgers</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        <p>{{this.burger_name}}</p>
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Create a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Add Cat</button>
</form>